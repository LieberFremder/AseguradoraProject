    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.segurosapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_persons"
        android:name="com.example.segurosapp.ui.persons.PersonsFragment"
        android:label="@string/title_persons"
        tools:layout="@layout/fragment_persons" />

    <fragment
        android:id="@+id/navigation_companies"
        android:name="com.example.segurosapp.ui.companies.CompaniesFragment"
        android:label="@string/title_companies"
        tools:layout="@layout/fragment_companies" />

    <fragment
        android:id="@+id/navigation_form"
        android:name="com.example.segurosapp.ui.form.FormFragment"
        android:label="@string/title_form"
        tools:layout="@layout/fragment_form" />
